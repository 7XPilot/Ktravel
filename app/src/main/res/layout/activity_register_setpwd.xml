<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <com.example.k_travel.view.CustomTitleBar
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_icon="@drawable/btn_back"
            app:titlebar_type="12" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="58dp"
            android:text="Sign in"
            android:textColor="@color/txt_color_3"
            android:textSize="25dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/border_gray_login">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@null"
                android:hint="username"
                android:inputType="number"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/txt_color_3"
                android:textColorHint="@color/txt_color_9"
                android:textSize="15dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/border_gray_login"
            android:gravity="center_vertical"
            android:orientation="horizontal">



            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="password"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/txt_color_3"
                android:textColorHint="@color/txt_color_9"
                android:textSize="15dp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/border_gray_login"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_confirm_pwd"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="confirm password"
                android:inputType="textPassword"
                android:maxLength="11"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:textColor="@color/txt_color_3"
                android:textColorHint="@color/txt_color_9"
                android:textSize="15dp" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="28dp"
            android:background="@drawable/bg_theme"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="18dp" />


    </LinearLayout>
</layout>